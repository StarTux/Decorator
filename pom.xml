<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.winthier.decorator</groupId>
  <artifactId>decorator</artifactId>
  <packaging>jar</packaging>
  <version>0.1-SNAPSHOT</version>
  <name>Decorator</name>
  <url>https://cavetale.com</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <repositories>
    <!-- Jitpack Repo -->
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
    <!-- Spigot Repo -->
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <!-- Cavetale Repo -->
    <repository>
      <id>cavetale</id>
      <url>https://cavetale.com/jenkins/plugin/repository/everything/</url>
    </repository>
  </repositories>
  <dependencies>
    <!-- Spigot-API -->
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.12.2-R0.1-SNAPSHOT</version>
    </dependency>
    <!-- Lombok -->
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.14.8</version>
      <scope>provided</scope>
    </dependency>
    <!-- MCProtocolLib -->
    <dependency>
      <groupId>com.github.steveice10</groupId>
      <artifactId>mcprotocollib</artifactId>
      <version>1.12.2-2</version>
    </dependency>
    <dependency>
      <groupId>com.github.steveice10</groupId>
      <artifactId>opennbt</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>com.github.steveice10</groupId>
      <artifactId>packetlib</artifactId>
      <version>1.3</version>
    </dependency>
    <dependency>
      <groupId>com.github.steveice10</groupId>
      <artifactId>mcauthlib</artifactId>
      <version>1.0</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>${project.name}</finalName>
    <plugins>
      <!-- Java 8 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
          <compilerArgs>
            <arg>-Xlint:unchecked</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <!-- Shade -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.github.steveice10:mcprotocollib</include>
                  <include>com.github.steveice10:opennbt</include>
                  <include>com.github.steveice10:packetlib</include>
                  <include>com.github.steveice10:mcauthlib</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>com.github.steveice10:mcprotocollib</artifact>
                  <includes>
                    <include>com/github/steveice10/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>com.github.steveice10:opennbt</artifact>
                  <includes>
                    <include>com/github/steveice10/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>com.github.steveice10:packetlib</artifact>
                  <includes>
                    <include>com/github/steveice10/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>com.github.steveice10:mcauthlib</artifact>
                  <includes>
                    <include>com/github/steveice10/**</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
